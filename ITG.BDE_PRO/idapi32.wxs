<?xml version="1.0" encoding="utf-8"?>
<Wix
	xmlns="http://wixtoolset.org/schemas/v4/wxs"
>
	<Fragment>

		<DirectoryRef Id="BDE_INSTALL_PATH" />

		<ComponentGroup
			Id="Idapi32"
			Directory="BDE_INSTALL_PATH"
			Source=".\SourceDir"
		>

			<?define AppFileName="idapi32.dll"?>

			<Component
				Id="$(var.AppFileName)"
				Guid="{E966F0E2-76B3-11D3-945B-00C04FB1760A}"
				Shared="yes"
				SharedDllRefCount="yes"
				Location="local"
			>
				<File
					Name="$(var.AppFileName)"
					Vital="yes"
					DefaultLanguage="0"
					KeyPath="yes"
				/>
				<Class
					Id="{FB99D710-18B9-11D0-A4CF-00A024C91936}"
					Context="InprocServer32"
					Description="Borland Database Engine"
					Programmable="yes"
					Control="no"
					Insertable="no"
					Advertise="yes"
					ThreadingModel="apartment"
					>
					<ProgId
						Id="Borland.Database_Engine.4"
						Description="Borland Database Engine"
						NoOpen=""
						Advertise="yes"
					>
						<ProgId
							Id="Borland.Database_Engine"
							Description="Borland Database Engine"
							NoOpen=""
							Advertise="yes"
						/>
					</ProgId>
				</Class>
				<RegistryKey
					Root="HKLM"
					Key="Software\Microsoft\Windows\CurrentVersion\App Paths\$(var.AppFileName)"
				>
					<RegistryValue Value="[#$(var.AppFileName)]" Type="string"/>
					<RegistryValue Name="Path" Value="[$$$(var.AppFileName)]" Type="string"/>
				</RegistryKey>
				<RegistryKey
					Root="HKLM"
					Key="Software\Borland\Database Engine"
				>
					<RegistryValue Name="DLLPath" Value="[$$$(var.AppFileName)]" Type="string"/>
					<!-- возможно, потребуется дать права на запись в этот ключ из-за "особенностей" BDE -->
				</RegistryKey>
			</Component>

			<Component
				Id="idapi32.cfg"
				Guid="{1428AFD2-B0B4-4BBE-BAB5-510A74CC018F}"
				Shared="yes"
				SharedDllRefCount="yes"
				Location="local"
				NeverOverwrite="yes"
			>
				<File
					Name="idapi32.cfg"
					Vital="yes"
				/>
				<RegistryKey
					Root="HKLM"
					Key="Software\Borland\Database Engine"
				>
					<RegistryValue
						Name="CONFIGFILE01"
						Value="[#idapi32.cfg]"
						Type="string"
						KeyPath="yes"
					/>
					<!-- возможно, потребуется дать права на запись в этот ключ из-за "особенностей" BDE -->
				</RegistryKey>
				
			</Component>

		</ComponentGroup>

		<CustomAction
			Id="IncBDEUsageCount"
			Script="jscript"
			Return="asyncWait"
			Execute="commit"
			Impersonate="no" 
		>
	<![CDATA[
var Sh=new ActiveXObject("WScript.Shell");
var Rk="HKLM\\Software\\Borland\\Database Engine\\UseCount";
var UseCount = 0;
try{ UseCount = Sh.RegRead(Rk) } catch(e) {};
UseCount++;
Sh.RegWrite(Rk, UseCount, "REG_DWORD");
			]]>
		</CustomAction>

		<InstallExecuteSequence>
			<Custom Action="IncBDEUsageCount" Before="InstallFinalize">
				<![CDATA[($idapi32.dll = 3) AND (?idapi32.dll = 2)]]>
			</Custom>
		</InstallExecuteSequence>

		<CustomAction
			Id="DecBDEUsageCount"
			Script="jscript"
			Return="asyncWait"
			Execute="deferred"
			Impersonate="no"
		>
			<![CDATA[
var Sh=new ActiveXObject("WScript.Shell");
var Rk="HKLM\\Software\\Borland\\Database Engine\\UseCount";
var UseCount=1;
try{
UseCount=Sh.RegRead(Rk) 
if(--UseCount){ Sh.RegWrite(Rk, UseCount, "REG_DWORD")
}else{ Sh.RegDelete(Rk) };
}catch(e){};
			]]>
		</CustomAction>

		<InstallExecuteSequence>
			<Custom Action="DecBDEUsageCount" After="InstallInitialize">
				<![CDATA[(?idapi32.dll = 3) AND ($idapi32.dll = 2)]]>
			</Custom>
		</InstallExecuteSequence>

		<CustomAction
			Id="RollbackDecBDEUsageCount"
			Script="jscript"
			Return="asyncWait"
			Execute="rollback"
			Impersonate="no"
		>
			<![CDATA[
var Sh=new ActiveXObject("WScript.Shell");
var Rk="HKLM\\Software\\Borland\\Database Engine\\UseCount";
var UseCount = 0;
try{ UseCount = Sh.RegRead(Rk) } catch(e) {};
UseCount++;
Sh.RegWrite(Rk, UseCount, "REG_DWORD");
			]]>
		</CustomAction>

		<InstallExecuteSequence>
			<Custom Action="RollbackDecBDEUsageCount" Before="InstallFinalize">
				<![CDATA[(?idapi32.dll = 3) AND ($idapi32.dll = 2)]]>
			</Custom>
		</InstallExecuteSequence>

	</Fragment>
</Wix>